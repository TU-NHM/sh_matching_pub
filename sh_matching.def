# A base Ubuntu 20 Singularity container with basic Python packages

BootStrap: library
From: ubuntu:20.04

%help
A base Ubuntu 20 Singularity container with basic Python packages such as HMMER3 and biopython

%post
    # Some package only available in "universe" repo
    apt update -y
    apt install -y software-properties-common
    add-apt-repository universe

    apt update
    apt upgrade -y

    apt install -y python3  # Python 3.8
    apt install -y python3-pip
    apt install -y zip
    apt install -y unzip
    apt install -y curl
    apt install -y hmmer
    apt install -y wget

    mkdir -p /sh_matching/programs/

    # biopython
    pip3 install --no-cache-dir --upgrade biopython==1.79

    # usearch 11.0.667
    wget https://www.drive5.com/downloads/usearch11.0.667_i86linux32.gz
    gunzip usearch11.0.667_i86linux32.gz
    mv usearch11.0.667_i86linux32 /sh_matching/programs/usearch
    chmod 0111 /sh_matching/programs/usearch

    # vsearch 2.21.1
    apt install -y vsearch
    # wget https://github.com/torognes/vsearch/releases/download/v2.21.1/vsearch-2.21.1-linux-x86_64.tar.gz

    # ITSx 1.1.3
    wget https://microbiology.se/sw/ITSx_1.1.3.tar.gz
    tar -xzvf ITSx_1.1.3.tar.gz
    mv ITSx_1.1.3 /sh_matching/programs/ITSx
    rm ITSx_1.1.3.tar.gz

    # TODO - apt install ncbi-blast+  (2.9.x) <= replace with usearch single-linkage clustering in the next version
    wget https://ftp.ncbi.nlm.nih.gov/blast/executables/legacy.NOTSUPPORTED/2.2.26/blast-2.2.26-x64-linux.tar.gz
    tar -xzvf blast-2.2.26-x64-linux.tar.gz
    mv blast-2.2.26 /sh_matching/programs/
    rm blast-2.2.26-x64-linux.tar.gz

    # Mothur version=1.47.0 - Release Date=20/01/2022
    apt install -y mothur
    # wget https://github.com/mothur/mothur/releases/download/v.1.47.0/Mothur.Ubuntu_20.zip

    # Installing Krona
    wget https://github.com/marbl/Krona/releases/download/v2.7.1/KronaTools-2.7.1.tar
    tar -xvf KronaTools-2.7.1.tar -C /sh_matching/programs/
    rm KronaTools-2.7.1.tar
    cd /sh_matching/programs/KronaTools-2.7.1/
    perl install.pl --prefix ../krona
    cd /

    # Get database files (https://plutof.ut.ee/#/filerepository/view/5538076)
    wget https://files.plutof.ut.ee/public/orig/E4/7C/E47CE4EEBC48A22618FBDF07218E4EC8DC32170CE75D55914765FBF3CA455CB2.zip
    mv E47CE4EEBC48A22618FBDF07218E4EC8DC32170CE75D55914765FBF3CA455CB2.zip sh_matching_data_0_5.zip
    unzip sh_matching_data_0_5.zip -d /sh_matching/
    rm sh_matching_data_0_5.zip

%environment
    export LC_ALL=C

%runscript
    exec "$@"

%labels
    Author kessya

%files
    sh_matching_analysis/readme.txt /sh_matching/readme.txt
    sh_matching_analysis/run_pipeline.sh /sh_matching/run_pipeline.sh
    sh_matching_analysis/scripts/* /sh_matching/scripts/
